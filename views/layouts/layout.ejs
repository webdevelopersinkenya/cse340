<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body class="<%= (title === 'Login' || title === 'Register') ? 'auth-page' : '' %>">
  <div id="wrapper">
    
    <!-- Only show header and navigation if not login or register page -->
    <% if (title !== 'Login' && title !== 'Register') { %>
      <%- include('../partials/header') %>
      <%- include('../partials/navigation') %>
    <% } %>

    <main>
      <%- body %>
    </main>

    <!-- Only show footer if not login or register page -->
    <% if (title !== 'Login' && title !== 'Register') { %>
      <%- include('../partials/footer') %>
    <% } %>
    
  </div>
</body>
</html>
