      .vehicle-detail {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <% include ../partials/header.ejs %>
  <main>
    <h1><%= title %></h1>
    <div><%- htmlContent %></div>
  </main>
  <% include ../partials/footer.ejs %>
</body>
</html>
