
<header>
  <a href="/" title="Return to home page">
    <img src="/images/site/logo.png" alt="CSE Motors Logo">
  </a>

  <div class="account-links">
    <% if (loggedin && accountData) { %>
      <!-- Display welcome message with link to account management -->
      <a href="/account/" title="Manage your account">
        Welcome <%= accountData.account_firstname %>
      </a>
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <!-- Show My Account link when not logged in -->
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header>
