<% /*
  This view contains the login form.
  Ensure the form's action and method are correct for the login process.
*/ %>

<div class="form-container">
  <h1><%= title %></h1>

  <!-- Display flash messages (like login success/failure) -->
  <%- messages() %>

  <!-- Display validation errors -->
  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form id="loginForm" action="/account/login" method="post">
    <label for="account_email">Email:</label>
    <input
      type="email"
      id="account_email"
      name="account_email"
      required
      value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
    />

    <label for="account_password">Password:</label>
    <input
      type="password"
      id="account_password"
      name="account_password"
      required
    />
    <span class="password-info">
      Passwords must be at least 10 characters and contain at least 1 uppercase, 1 number, and 1 special character.
    </span>

    <button type="submit">Login</button>

    <p class="form-link">
      No account?
      <a href="/account/register" title="Register an account">Sign-up</a>
    </p>
  </form>
</div>
